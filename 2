#ifndef CAMERA_H
#define CAMERA_H

#include <glm/detail/qualifier.hpp>
#include <glm/fwd.hpp>
#include <glm/glm.hpp>
#include <glm/gtc/matrix_transform.hpp>

// Constants for Camera, maybe throw into config file later on
const unsigned int SCR_WIDTH = 800;
const unsigned int SCR_HEIGHT = 600;

const float SPEED = 2.5f;
const float ZOOM = 45.0f;
// orhtograpic camera
//
enum Camera_Movment { UP, DOWN, LEFT, RIGHT };

class Camera {

public:
  glm::vec3 position;
  glm::vec3 right;
  glm::vec3 up;

  float MovementSpeed;
  float Zoom;
  float MouseSensitivity;

  // remeber y direction is up in opengl space
  Camera(glm::vec3 pos = glm::vec3(0.0f, 0.0f, 0.0f))
      : MovementSpeed(SPEED), Zoom(ZOOM) {
    position = pos;
    up = glm::vec3(1.0f, 0.0f, 0.0f);
    right = glm::vec3(0.0, 0.0, 1.0f);
  };

  void processKeyboard(Camera_Movment direction, float deltaTime) {
    float vel = MovementSpeed * direction;

    switch (direction) {
    case DOWN:
      position += up * vel;
      break;
    case UP:
      position -= up * vel;
      break;
    case LEFT:
      position -= right * vel;
      break;
    case RIGHT:
      position += right * vel;
      break;
    }
  }

  void ProcessMouseScroll(float yoffset) {
    Zoom -= (float)yoffset;
    if (Zoom < 1.0f)
      Zoom = 1.0f;
    if (Zoom > 45.0f)
      Zoom = 45.0f;
  }
};

#endif // !
